{
  "id": "/",
  "scope": "/",
  "name": "Leitor de PDF",
  "short_name": "Leitor de PDF",
  "description": "Um PWA serverless para visualizar PDFs do Google Drive, fazer anotações e sincronizar com Firestore.",
  "lang": "pt-BR",
  "dir": "ltr",
  "start_url": "/?utm_source=pwa",
  "display": "standalone",
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui"
  ],
  "background_color": "#09090b",
  "theme_color": "#09090b",
  "orientation": "any",
  "categories": [
    "productivity",
    "utilities",
    "education"
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "icons": [
    {
      "src": "/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-512-maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "Meus Arquivos",
      "short_name": "Arquivos",
      "description": "Abrir lista de arquivos do Drive",
      "url": "/?mode=browser&utm_source=pwa",
      "icons": [
        {
          "src": "/icons/shortcut-files-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Novo Mapa Mental",
      "short_name": "Mapa Mental",
      "description": "Criar um novo mapa mental",
      "url": "/?mode=mindmaps&utm_source=pwa",
      "icons": [
        {
          "src": "/icons/shortcut-mindmap-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+pdf",
      "url": "/?file=%s&utm_source=pwa"
    }
  ],
  "file_handlers": [
    {
      "action": "/?source=filehandler",
      "accept": {
        "application/pdf": [
          ".pdf"
        ],
        "application/json": [
          ".mindmap",
          ".json"
        ]
      },
      "icons": [
        {
          "src": "/icons/filehandler-512.png",
          "sizes": "512x512",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "share_target": {
    "action": "/?source=share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "files": [
        {
          "name": "file",
          "accept": [
            "application/pdf",
            ".pdf",
            ".mindmap",
            "application/json"
          ]
        }
      ]
    }
  },
  "screenshots": [
    {
      "src": "/images/screenshots/wide-1280x720.jpg",
      "sizes": "1280x720",
      "type": "image/jpeg",
      "form_factor": "wide",
      "label": "Visualizador de PDF - modo escuro"
    },
    {
      "src": "/images/screenshots/narrow-400x800.jpg",
      "sizes": "400x800",
      "type": "image/jpeg",
      "form_factor": "narrow",
      "label": "Lista de arquivos - mobile"
    }
  ]
}